<h1>編集画面</h1>
<% if @book.errors.any? %>

  <div class="alert alert-warning">

    <ul>
      <% @book.errors.full_messages.each do |message| %>

      <li><%= message %></li>
    <% end %>
    </ul>

  </div>

<% end %>

<%= form_for(@book, url:"/books/#{@book.id}") do |book| %>

    <h4>Title</h4>
    <%= book.text_field :title %>
    <h4>Body</h4>
    <%= book.text_area :body %>
  <section>
  	<%= book.submit '保存' %>
  </section>
  <%=link_to'show',book_path %>
  <%=link_to'back',book_path %>
<% end %>